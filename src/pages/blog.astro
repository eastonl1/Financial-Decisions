---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout>
	<main>
		<Hero
			title="Newsletter"
			subtitle="Seasonal newsletters and updates from the Financial Decisions team."
		/>

		<section class="bg-white">
			<div class="container mx-auto px-6 py-10 sm:py-12">
				<article class="rounded-lg border border-slate-200 bg-stone-50 p-6">
					<p class="text-xs font-semibold uppercase tracking-wide text-slate-500">
						Summer 2025
					</p>
					<h2 class="mt-2 text-2xl font-semibold text-slate-900">
						Summer 2025 Newsletter
					</h2>
					<p class="mt-3 text-sm text-slate-600">
						Full newsletter edition covering family planning, fraud information, and
						local updates.
					</p>
					<div class="mt-6 overflow-hidden rounded-lg border border-slate-200 bg-white">
						<iframe
							title="2025 Summer Newsletter PDF"
							src="/Newsletters/2025 Summer.pdf"
							class="h-[1200px] w-full"
							loading="lazy"
						></iframe>
					</div>
				</article>
			</div>
		</section>
	</main>
</Layout>
