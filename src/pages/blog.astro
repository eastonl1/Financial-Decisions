---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ChristmasPost from '../content/posts/Christmas 2025.md';

const frontmatter = ChristmasPost.frontmatter ?? {};
---

<Layout>
	<main>
		<Hero
			title="Newsletter"
			subtitle="Seasonal newsletters and updates from the Financial Decisions team."
		/>

		<section class="bg-white">
			<div class="container mx-auto px-6 py-10 sm:py-12">
				<article class="rounded-lg border border-[color:var(--accent)] bg-stone-50 p-6">
					<p class="eyebrow">
						{frontmatter.issue ?? "Newsletter"}
					</p>
					<div class="mt-4 space-y-6 text-sm text-slate-700">
						<ChristmasPost />
					</div>
				</article>
			</div>
		</section>
	</main>
</Layout>
