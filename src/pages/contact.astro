---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout>
	<main>
		<Hero
			title="Contact Us"
			subtitle="We are here to help. Reach out with questions or to schedule a meeting."
		/>

		<section class="bg-white">
			<div class="container mx-auto px-6 py-10 sm:py-12">
				<div class="grid gap-6 md:grid-cols-3">
					<div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
						<p class="text-sm font-semibold uppercase tracking-wide text-slate-500">
							Visit Us
						</p>
						<a
							href="https://www.google.com/maps/search/?api=1&query=1546%20Bellevue%20Avenue%2C%20Sudbury%2C%20ON%2C%20P3B%203G2"
							target="_blank"
							rel="noopener"
							class="no-link-style mt-3 inline-block text-base font-semibold text-slate-900"
						>
							1546 Bellevue Avenue
						</a>
						<p class="text-base text-slate-600">Sudbury, ON, P3B 3G2</p>
					</div>
					<div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
						<p class="text-sm font-semibold uppercase tracking-wide text-slate-500">
							Call Us
						</p>
						<p class="mt-3 text-base font-semibold text-slate-900">
							705-525-PLAN (7526)
						</p>
					</div>
					<div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
						<p class="text-sm font-semibold uppercase tracking-wide text-slate-500">
							Email Us
						</p>
						<a
							href="mailto:fdi@financialdecisions.ca"
							class="mt-3 inline-block text-base font-semibold text-slate-900"
						>
							fdi@financialdecisions.ca
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
