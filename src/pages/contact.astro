---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout>
	<main>
		<Hero
			title="Contact Us"
			subtitle="We are here to help. Reach out with questions or to schedule a meeting."
		/>

		<section class="bg-white min-h-[60vh]">
			<div class="container mx-auto px-6 py-10 sm:py-12">
				<div class="grid gap-6 md:grid-cols-3">
					<div class="rounded-lg border border-[color:var(--accent)] bg-stone-50 p-6">
						<h3 class="text-base font-semibold text-slate-900">
							Visit Us
						</h3>
						<a
							href="https://www.google.com/maps/search/?api=1&query=1546%20Bellevue%20Avenue%2C%20Sudbury%2C%20ON%2C%20P3B%203G2"
							target="_blank"
							rel="noopener"
							class="no-link-style mt-3 inline-block text-base font-semibold text-[color:var(--accent)]"
						>
							1546 Bellevue Avenue
							<span class="text-base text-current">Sudbury, ON, P3B 3G2</span>
						</a>
					</div>
					<div class="rounded-lg border border-[color:var(--accent)] bg-stone-50 p-6">
						<h3 class="text-base font-semibold text-slate-900">
							Call Us
						</h3>
						<a
							href="tel:7055257526"
							class="no-link-style mt-3 inline-block text-base font-semibold text-[color:var(--accent)]"
						>
							705-525-PLAN (7526)
						</a>
					</div>
					<div class="rounded-lg border border-[color:var(--accent)] bg-stone-50 p-6">
						<h3 class="text-base font-semibold text-slate-900">
							Email Us
						</h3>
						<a
							href="mailto:fdi@financialdecisions.ca"
							class="no-link-style mt-3 inline-block text-base font-semibold text-[color:var(--accent)]"
						>
							fdi@financialdecisions.ca
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
