---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout>
	<main>
		<Hero
			title="Client Newsletters"
			subtitle="Archived newsletters and video updates with planning ideas and market commentary."
		/>

		<section class="bg-white">
			<div class="container mx-auto px-6 py-12 sm:py-16">
				<div class="grid gap-10 lg:grid-cols-2">
						<div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
							<h2 class="text-xl font-semibold text-slate-900">Newsletters</h2>
							<div class="mt-4 overflow-x-auto">
								<table class="w-full text-left text-sm text-slate-700">
									<thead class="border-b border-slate-200 text-xs uppercase tracking-wide text-slate-500">
										<tr>
											<th class="py-2">Title</th>
											<th class="py-2">Year</th>
										</tr>
									</thead>
									<tbody>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="/assets/Newsletters/2025 Summer.pdf"
													target="_blank"
													rel="noopener"
												>
													Summer 2025 Newsletter
												</a>
											</td>
											<td class="py-3">2025</td>
										</tr>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="/assets/Newsletters/2025 Winter Tax and Scams.pdf"
													target="_blank"
													rel="noopener"
												>
													Winter 2025 Newsletter
												</a>
											</td>
											<td class="py-3">2025</td>
										</tr>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="/assets/Newsletters/2024 Fall - Colour.pdf"
													target="_blank"
													rel="noopener"
												>
													Fall 2024 Newsletter
												</a>
											</td>
											<td class="py-3">2024</td>
										</tr>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="/assets/Newsletters/2024 - Spring - Summer.pdf"
													target="_blank"
													rel="noopener"
												>
													Spring - Summer 2024 Newsletter
												</a>
											</td>
											<td class="py-3">2024</td>
										</tr>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="/assets/Newsletters/Winter 2024.pdf"
													target="_blank"
													rel="noopener"
												>
													Winter - Tax Newsletter 2024
												</a>
											</td>
											<td class="py-3">2024</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
						<div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
							<h2 class="text-xl font-semibold text-slate-900">Video Updates</h2>
							<div class="mt-4 overflow-x-auto">
								<table class="w-full text-left text-sm text-slate-700">
									<thead class="border-b border-slate-200 text-xs uppercase tracking-wide text-slate-500">
										<tr>
											<th class="py-2">Title</th>
											<th class="py-2">Year</th>
										</tr>
									</thead>
									<tbody>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="https://youtu.be/hbwP2wbbWng"
													target="_blank"
													rel="noopener"
												>
													Spring 2025 Video Update
												</a>
											</td>
											<td class="py-3">2025</td>
										</tr>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="https://youtu.be/5kNPp5YPRnw"
													target="_blank"
													rel="noopener"
												>
													Winter 2025 Video Update
												</a>
											</td>
											<td class="py-3">2025</td>
										</tr>
										<tr class="border-b border-slate-100">
											<td class="py-3">
												<a
													class="font-semibold text-slate-900 hover:text-slate-700"
													href="https://youtu.be/kpPQ4iCaNVA"
													target="_blank"
													rel="noopener"
												>
													Summer 2024 Video Update
												</a>
											</td>
											<td class="py-3">2024</td>
										</tr>
										<tr>
									</tbody>
								</table>
							</div>
						</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
